{
    "name": "axytos/shopware6-sdk",
    "version": "1.0.0",
    "type": "library",
    "license": "proprietary",
    "repositories": [
        {
            "type": "path",
            "url": "../ecommerce-sdk"
        },
        {
            "type": "path",
            "url": "../openapi-client-sdk"
        }
    ],
    "require": {
        "php": "7.4.*",
        "axytos/ecommerce-sdk": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpmetrics/phpmetrics": "^2.7",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Axytos\\Shopware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Axytos\\Shopware\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "coverage": "./vendor/bin/phpunit --colors=always --coverage-html coverage --coverage-filter src",
        "metrics": "./vendor/bin/phpmetrics --report-html=metrics src",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=1G",
        "phpstan-pro": "./vendor/bin/phpstan analyse --memory-limit=1G --pro"
    }
}
